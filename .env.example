# Environment Variables Template
# 複製此檔案為 .env 並填入真實值

# Redis
REDIS_URL=redis://redis:6379/0

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Notion API
NOTION_TOKEN=secret_xxxxxxxxxxxxx
NOTION_DATABASE_ID=

# Line Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_USER_ID=your_line_user_id

# Siri Integration
SIRI_API_KEY=your_secret_api_key_here  # 使用 openssl rand -hex 32 生成

# Application
APP_NAME=Voice-Notion
DEBUG=false
TASK_ENCRYPTION_KEY=your_task_encryption_key_here  # 用於加密 Celery 任務酬載。可用 python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())" 生成
